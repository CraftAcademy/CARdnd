= form_with scope: :automobile, url: automobiles_path, local: true , id: :create_automobile do | form |
    - if @automobile.errors.any?
        #error_explanation
            %h2
                = pluralize(@automobile.errors.count, "error")
                prohibited
                this automobile from being saved:
            %ul
                - @automobile.errors.full_messages.each do |msg|
                    %li= msg
    %p
        = form.label :brand
        %br/
        = form.select :brand, options_for_select(@brands.map { |brand| [brand[:brand], brand[:id]] })
        =# form.text_field :brand
    %p
        =# form.label :model
        %br/
        =# form.text_field :model
    %p
        = form.label :year
        %br/
        =# form.text_field :year
        = form.select :year, (2000..Date.today.year).to_a
    #automobile_model

    %p
        = form.label :price
        %br/
        = form.text_field :price
    
   
    %p
        = form.label :engine
        %br/
        = form.text_field :engine
    %p
        = form.label :description
        %br/
        = form.text_area :description
        
    %p
        = form.label :image
        %br/
        = form.file_field :image
    %p
        = form.submit "Save Car"
